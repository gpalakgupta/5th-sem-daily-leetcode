class Solution {
    public int longestConsecutive(int[] nums) {
        HashSet<Integer> st = new HashSet<>();
        for (int el : nums) {
            st.add(el);
        }
        int ans = 0;
        for (int el : nums) {
            if (!st.contains(el - 1)) {
                int c = 0;
                while (st.contains(el)) {
                    st.remove(el);
                    c++;
                    el = el + 1;
                }
                ans = Math.max(ans, c);

            }
        }
        return ans;
    }
}
