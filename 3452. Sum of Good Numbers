class Solution {
    public int sumOfGoodNumbers(int[] nums, int k) {
        int n = nums.length;
        int ans = 0;
        for(int i = 0; i<k; i++){
            if((i+k) < n && nums[i] > nums[i+k]){
                ans+=nums[i];
            }
        }
        for(int i = k; i<n-k; i++){
            if(nums[i] > nums[i-k] && nums[i] > nums[i+k]){
                ans+=nums[i];
            }
        }
        for(int i = n-k; i<n; i++){
            if((i-k) >= 0 && nums[i] > nums[i-k]){
                ans+=nums[i];
            }
        }
        return ans;
    }
}
