class Solution {
    public int maxScore(int[] cardPoints, int k) {
        int n = cardPoints.length;
        int sum = 0;
        int ans = 0;
        int j = n-1;
        int i = 0;
        for(i = 0; i<k; i++){
            sum+=cardPoints[i];
        }
        ans = Math.max(ans,sum);
        i-=1;
        while(i >= 0){
            sum-=cardPoints[i--];
            sum+=cardPoints[j--];
            ans = Math.max(ans,sum);
        }
        return ans;
    }
}
