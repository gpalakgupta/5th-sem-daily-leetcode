class Solution {
    public int[] findDiagonalOrder(int[][] mat) {
        int n = mat.length;
        int m = mat[0].length;
        boolean f = true;
        int[] ans = new int[n*m];
        int k = 0;
        for(int i = 0; i<n+m-1; i++){
            if(f){
                int row = i < n ? i : n-1;
                int col = i<n ? 0 : i-n+1;
                while(row >= 0 && row < n && col >= 0 && col < m){
                    ans[k++] = mat[row][col];
                    row--;
                    col++;
                }
            }
            else{
                int col = i<m ? i : m-1;
                int row = i< m ? 0 : i-m+1;
                while(row >= 0 && row < n && col >= 0 && col < m){
                    ans[k++] = mat[row][col];
                    row++;
                    col--;
                }
            }
            f = !f;
        }
        return ans;
    }
}
