class Solution {
    public int maximumSwap(int num) {
        String str = String.valueOf(num);
        int n = str.length();
        int[] arr = new int[n];
        for(int i = 0; i<str.length(); i++){
            arr[i] = str.charAt(i)-'0';
        }
        int[] max = new int[n];
        max[n-1] = n-1;
        for(int i = n-2; i>=0; i--){
            if(arr[i] > arr[max[i+1]]){
                max[i] = i;
            }
            else{
                max[i] = max[i+1];
            }
        }
       
        for(int i = 0; i<n; i++){
            if(arr[max[i]] > arr[i]){
                int t = arr[i];
                arr[i] = arr[max[i]];
                arr[max[i]] = t;
                break;
            }
        }
        int ans = 0;
        for(int el : arr){
            ans = ans*10+el;
        }
        return ans;
    }
}
