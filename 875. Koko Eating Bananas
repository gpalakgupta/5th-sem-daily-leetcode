class Solution {
    public int minEatingSpeed(int[] piles, int h) {
        int n = piles.length;
        int ans = 0;
        int st = 1;
        int end = 0;
        for(int el : piles){
            end = Math.max(el,end);
        }
        while(st <= end){
            int mid = st+(end-st)/2;
            if(isvalid(piles,mid,h)){
                ans = mid;
                end = mid-1;
            }
            else{
                st = mid+1;
            }
        }
        return ans;
    }
    public boolean isvalid(int[] piles, int mid, int h){
        int c = 0;
        int n = piles.length;
        int i = 0;
        while(i<n){
            c += (piles[i]+mid-1)/mid;
            if(c > h){
                return false;
            }
            i++;
        }
        return true;
    }
}
